body{
    word-wrap: break-word;
    font-family: georgia;
    font-size: 14px;
    line-height: 28px;
    color: #959595;
    text-align: left;
    padding: 18px 13px 18px 18px;
}

::-webkit-scrollbar {
    width: 12px;
}

::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
    border-radius: 10px;
}

::-webkit-scrollbar-thumb {
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5);
}

